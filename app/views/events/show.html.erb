
<div class="container">
  <h1 class="eventname"><%= @event.name %> @ <%= @event.location %></h1>
  <h2 class="eventartist"><%= @event.city %> - <%=@event.artist %> - <%= @event.date.strftime("%d/%m/%Y - %I:%M")%></h2>


  <div class ="form">
  </div>

  <%= simple_form_for [@event, SongRequest.new] do |sg| %>
    <%= sg.input :input, :label => "Song request" %>
    <%= sg.label "Audio File" %>
    <%= sg.file_field :song_file %>
    <%= sg.submit "submit" %>
  <% end %>


  <div class="sr-header">
  <% @event.song_requests.sort_by{|sr| sr.comments.length}.reverse.each do |song_request| %>
    <h2><%= link_to song_request.user.username, user_profiles_path(song_request.user_id) %></h2>
      <%= render partial: 'song_requests/show', locals: {song_request: song_request} %>
    <% end %>

      <%= link_to "Back to all events", events_path %>

</div>

