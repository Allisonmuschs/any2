  <h1>Current/Past Events</h1>
  <div class="cards">
    <% @events.each do |event| %>
    <li><%= event.name %></li>
    <li><%= link_to event.name,  event_path(event) %></li>
    <li><%= link_to "delete", event_path(event), method: :delete  %></li>
    <% end %>
  </div>


  <p>Add new event</p>
  <%= simple_form_for @event do |f| %>
  <div class="eventsub">
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :artist %>
    <%= f.input :date %>
  </div>
  <div class="submit"></div>
  <%= f.submit "Submit event", class: 'btn-btn ghost' %>
  <% end %>
</div>
<br>


<%= form_tag events_path, method: :get do %>
<%= text_field_tag :query,
params[:query],
class: "form-control",
  placeholder: "Find an event"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
