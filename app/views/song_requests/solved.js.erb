var container = document.querySelector("#song_request-<%= @song_request.id%>")

<% if @song_request.solved == true  %>
  container.querySelector("span").innerText = "Track identified"
  container.querySelector("span").style = "color:green"

<% else %>
    container.querySelector("span").innerText = "Mark as identified"
    container.querySelector("span").style = "color:red"
<% end %>
