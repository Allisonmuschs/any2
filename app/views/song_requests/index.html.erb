<h1><%= @event.name %> - <%= @event.location %></h1>
<h2><%= @event.artist %></h2>

<ul>
<% @song_requests.each do |sg| %>

  <li>
    <%= sg.input %>
    <% if sg.user == current_user %>
      <%= link_to 'edit', edit_event_song_request_path(@event.id, sg.id)%>
    <% end %>
  </li>

  <li><%= sg.input %>
     <%= link_to '❌', song_request_path(sg),
              method: :delete,
              data: { confirm: "Are you sure?" }%>

  </li>
<% end %>
</ul>

<%= link_to "Add a new request", new_event_song_request_path  %>

<%= simple_form_for Comment.new do |f| %>
  <%= f.input :input %>
  <%= f.button :submit%>
<% end %>

<%= link_to "Go back to all events", events_path  %>
