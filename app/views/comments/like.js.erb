<% if current_user.liked? @comment %>
 document.querySelector("#comment-<%= @comment.id %>").className = "like-btn liked";
document.querySelector("#comment-<%= @comment.id %>").innerHTML= "<%= @comment.get_upvotes.size %>";

<% else %>
 document.querySelector("#comment-<%= @comment.id %>").className = "like-btn";
document.querySelector("#comment-<%= @comment.id %>").innerHTML= "<%= @comment.get_upvotes.size %>";

<% end %>
